<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pet_rename_text"
        android:textColor="@color/black"
        android:textSize="@dimen/pet_name_text_size"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:id="@+id/et_rename_pet"
        android:hint="@string/pet_rename_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/pet_name_text_size"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_rename_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/pet_rename_cancel"
            android:textSize="@dimen/pet_name_btn_text_size"
            />

        <TextView
            android:id="@+id/tv_rename_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/pet_rename_ok"
            android:textSize="@dimen/pet_name_btn_text_size"
            />

    </LinearLayout>


</LinearLayout>